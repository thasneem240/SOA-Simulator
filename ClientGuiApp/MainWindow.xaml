<Window x:Class="ClientGuiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGuiApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Welcome to the application" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top"/>
        <Label Content="Register a new user" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top"/>
        <Button Name="RegisterButton" Content="Register" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Log In to an existing user&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="33"/>
        <Button Name="LogInButton" Content="Log In" HorizontalAlignment="Center" Margin="0,269,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.494,-0.396" Click="OpenWIndow"/>
    </Grid>
</Window>
