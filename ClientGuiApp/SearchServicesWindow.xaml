<Window x:Class="ClientGuiApp.SearchServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGuiApp"
        mc:Ignorable="d"
        Title="SearchServicesWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="searchBox" HorizontalAlignment="Center" Margin="0,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Please enter the description of the service you want." HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.43,1.382"/>
        <Button Content="Search" HorizontalAlignment="Center" Margin="0,163,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="325,239,325,72" SelectionChanged="ListBox_SelectionChanged" Name ="myListbox"/>
        <Button Content="Back" HorizontalAlignment="Center" Margin="0,367,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Label Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,191,0,0" Name="statusLabel"/>

    </Grid>
</Window>
